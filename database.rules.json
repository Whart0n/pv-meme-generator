{
  "rules": {
    ".read": "auth != null || !data.exists() || data.child('public').val() === true",
    ".write": false,
    
    "templates": {
      ".read": true,
      ".write": "auth != null && root.child('users').child(auth.uid).child('isAdmin').val() === true",
      ".indexOn": ["order", "name"]
    },
    
    "metahero-nfts": {
      ".read": true,
      ".write": "auth != null && root.child('users').child(auth.uid).child('isAdmin').val() === true",
      ".indexOn": ["elo_score"],
      "$nftId": {
        ".read": true,
        ".write": true,
        "elo_score": { ".validate": "newData.isNumber()" },
        "wins": { ".validate": "newData.isNumber()" },
        "losses": { ".validate": "newData.isNumber()" },
        "total_votes": { ".validate": "newData.isNumber()" }
      }
    },
    
    "voting-sessions": {
      ".read": "auth != null && root.child('users').child(auth.uid).child('isAdmin').val() === true",
      ".write": true,
      ".indexOn": ["timestamp"]
    },
    
    "user-sessions": {
      ".read": "auth != null && root.child('users').child(auth.uid).child('isAdmin').val() === true",
      ".write": true
    },
    
    "memes": {
      ".read": true,
      ".write": true,
      ".indexOn": ["upvotes", "templateId", "createdAt"]
    },
    
    "users": {
      ".read": "auth != null",
      ".write": "auth != null && (!data.exists() || !data.hasChildren())",
      "$uid": {
        ".read": "auth != null && auth.uid === $uid",
        ".write": "auth != null && auth.uid === $uid"
      }
    },
    
    "templateUsage": {
      ".read": true,
      ".write": true,
      "$templateId": {
        "lastUsed": {".validate": "newData.isNumber()"},
        "usageCount": {".validate": "newData.isNumber()"}
      }
    },
    
    "admin": {
      ".read": "auth != null && root.child('users').child(auth.uid).child('isAdmin').val() === true",
      ".write": "auth != null && root.child('users').child(auth.uid).child('isAdmin').val() === true"
    },
    
    "admins": {
      ".read": "auth != null",
      ".write": "auth != null && root.child('admins').child(auth.uid).val() === true",
      "$uid": {
        ".validate": "newData.isBoolean()"
      }
    }
  }
}
